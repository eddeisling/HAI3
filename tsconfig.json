{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./packages/cli/template-sources/project/configs/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/screensets/*": ["./src/screensets/*"],
      "@hai3/state": ["./packages/state/src/index.ts"],
      "@hai3/state/*": ["./packages/state/src/*"],
      "@hai3/layout": ["./packages/layout/src/index.ts"],
      "@hai3/layout/*": ["./packages/layout/src/*"],
      "@hai3/api": ["./packages/api/src/index.ts"],
      "@hai3/api/*": ["./packages/api/src/*"],
      "@hai3/i18n": ["./packages/i18n/src/index.ts"],
      "@hai3/i18n/*": ["./packages/i18n/src/*"],
      "@hai3/framework": ["./packages/framework/src/index.ts"],
      "@hai3/framework/*": ["./packages/framework/src/*"],
      "@hai3/react": ["./packages/react/src/index.ts"],
      "@hai3/react/*": ["./packages/react/src/*"],
      "@hai3/uikit": ["./packages/uikit/src/index.ts"],
      "@hai3/uikit/*": ["./packages/uikit/src/*"],
      "@hai3/studio": ["./packages/studio/src/index.ts"],
      "@hai3/studio/*": ["./packages/studio/src/*"],
      "@hai3/cli": ["./packages/cli/src/index.ts"],
      "@hai3/cli/*": ["./packages/cli/src/*"]
    }
  },
  "include": ["src", "packages/*/src"],
  "exclude": ["packages/*/dist", "packages/*/__tests__", "packages/*/src/__tests__"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
